<div class="topPart">
    <span>Lire le message</span>
</div>
<div class="inboxInfo">
    <div class="view">
        <div class="content">
            <div class="nameDate">
                <div>
                    <span class="categorie">
                        {% if receptorOrSender == 'receptor' %}
                            A :
                        {% else %}
                            De :
                        {% endif %}
                    </span>
                    <span class="name">{{ person['pseudo'] }}</span>
                </div>
            </div>
            <span class="categorie">Objet : </span><span class="titleMsg">{{ object }}</span>
            <div class="viewMessage viewMessageSize">
                <p>{{ content|raw }}</p>

            </div>

            {% if PJ is not empty %}
                <div class="downloadFile">
                    <input class="notForUser" id="mailId" value="{{ id }}">
                    <button id="dlPJ" class="suppEmail">télécharger</button>
               </div>

                
            {% endif %}
        </div>

    </div>
</div>

<script src="web/JS/connected/mail.js"></script>
